                <property name="url" value="jdbc:mysql://localhost:3306/db3"/>
                <property name="username" value="root"/>
                <property name="password" value="root"/>
            </dataSource>
        </environment>-->
    </environments>

    <mappers>
        <mapper resource="sqlMap/UserMapper.xml"/>
    </mappers>

</configuration>